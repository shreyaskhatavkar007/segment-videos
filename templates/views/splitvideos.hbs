<html>
<head>
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
<h2>Segment Video</h2>
<form id="layout" action="/api/process-interval" method="POST">
    <div>
      <input name="video_link" class="video-link" type="text" id="videoLink" placeholder="Video Link" required="">
    </div>
    <div>
      <select name="segmentSetting" id="segmentSetting">
        <option value="duration">Interval Duration</option>
      </select>
    </div>
    <div>
      <input name="interval_duration" class="interval-duration" type="number" id="intervalDuration" placeholder="Interval Duration (in seconds)..." required="">
    </div>
    <div>
      <button type="submit" id="segmentVideo" class="process-video">Segment Video</button>
    </div>
</form>
{{#each internal_videos}}
    <video class = {{className}} width="500" height="500" controls>
        <source src={{video_url}} class = {{className}} type="video/mp4">
    </video>
{{/each}}
<div>
    {{serverError}}
</div>
</body>
</html>
